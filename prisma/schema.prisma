generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ImpactDirection {
  POS
  NEG
  MIXED
  UNCERTAIN
}

enum ConfidenceLevel {
  LOW
  MED
  HIGH
}

enum EffectLayer {
  FIRST
  SECOND
  THIRD
  FOURTH
}

enum SensitivityLevel {
  LOW
  MED
  HIGH
}

enum TrackingMode {
  MANUAL
}

enum IndicatorStatus {
  GREEN
  YELLOW
  RED
  UNKNOWN
}

enum BiasLabel {
  STRONG_NEG
  NEG
  NEUTRAL
  POS
  STRONG_POS
}

enum HoldingConstraint {
  LOCKED
  SEMI_LOCKED
  FREE
}

enum HoldingPurpose {
  TAX
  SPEND_0_12M
  SPEND_12_36M
  LIFESTYLE_DRAWDOWN
  LONG_TERM_GROWTH
}

enum RunStatus {
  PLAYING_OUT
  MIXED
  INVALIDATED
  UNASSESSED
}

enum ShockDirection {
  UP
  DOWN
  FLAT
}

enum StrengthBand {
  WEAK
  MED
  STRONG
}

enum LagBand {
  IMMEDIATE
  M3_6
  M6_18
  M18_PLUS
}

enum SizingBand {
  SMALL
  MEDIUM
  LARGE
}

enum BranchName {
  BASE
  BULL
  BEAR
}

enum UniverseAssetType {
  EQUITY
  ETF
}

enum IndicatorSupportDirection {
  HIGHER_SUPPORTS
  LOWER_SUPPORTS
}

model User {
  id                String    @id @default(cuid())
  name              String?
  email             String    @unique
  emailVerified     DateTime? @map("email_verified")
  passwordHash      String    @map("password_hash")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  themes             Theme[]
  portfolioScenarios PortfolioScenario[]
  universeVersions   CompanyUniverseVersion[]
  accounts           Account[]
  sessions           Session[]

  @@map("users")
}

model Theme {
  id            String             @id @default(cuid())
  statement     String
  probability   Float
  horizonMonths Int                @map("horizon_months")
  runStatus     RunStatus          @default(UNASSESSED) @map("run_status")
  portfolioScenarioId String?      @map("portfolio_scenario_id")
  createdAt     DateTime           @default(now()) @map("created_at")
  updatedAt     DateTime           @updatedAt @map("updated_at")
  userId        String?            @map("user_id")

  effects            ThemeEffect[]
  holdings           Holding[]
  portfolioMappings  PortfolioMapping[]
  invalidationItems  InvalidationItem[]
  runSnapshots       RunSnapshot[]
  branches           ThemeBranch[]
  recommendations    ExpressionRecommendation[]
  indicatorDefinitions IndicatorDefinition[]
  user               User?              @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenario           PortfolioScenario? @relation(fields: [portfolioScenarioId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@map("themes")
}

model ThemeEffect {
  id              String          @id @default(cuid())
  themeId         String          @map("theme_id")
  layer           EffectLayer
  description     String
  impactDirection ImpactDirection @map("impact_direction")
  confidence      ConfidenceLevel
  orderIndex      Int             @map("order_index")

  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@map("theme_effects")
}

model Holding {
  id           String           @id @default(cuid())
  themeId      String           @map("theme_id")
  name         String
  ticker       String?
  weight       Float?
  sensitivity  SensitivityLevel
  constraint   HoldingConstraint @default(FREE)
  purpose      HoldingPurpose    @default(LONG_TERM_GROWTH)
  exposureTags Json             @map("exposure_tags")

  theme     Theme             @relation(fields: [themeId], references: [id], onDelete: Cascade)
  mappings  PortfolioMapping[]

  @@map("holdings")
}

model PortfolioMapping {
  id           String          @id @default(cuid())
  themeId      String          @map("theme_id")
  holdingId    String          @map("holding_id")
  exposureType String          @map("exposure_type")
  netImpact    ImpactDirection @map("net_impact")
  mechanism    String
  confidence   ConfidenceLevel

  theme   Theme   @relation(fields: [themeId], references: [id], onDelete: Cascade)
  holding Holding @relation(fields: [holdingId], references: [id], onDelete: Cascade)

  @@map("portfolio_mappings")
}

model InvalidationItem {
  id                  String          @id @default(cuid())
  themeId             String          @map("theme_id")
  assumption          String
  breakpointSignal    String          @map("breakpoint_signal")
  indicatorName       String          @map("indicator_name")
  indicatorTrackingMode TrackingMode  @default(MANUAL) @map("indicator_tracking_mode")
  latestStatus        IndicatorStatus @default(UNKNOWN) @map("latest_status")
  latestNote          String?         @map("latest_note")
  updatedAt           DateTime        @updatedAt @map("updated_at")

  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@map("invalidation_items")
}

model RunSnapshot {
  id                String    @id @default(cuid())
  themeId           String    @map("theme_id")
  modelName         String    @map("model_name")
  promptVersion     String    @map("prompt_version")
  rawOutputJson     Json      @map("raw_output_json")
  computedBiasScore Float     @map("computed_bias_score")
  biasLabel         BiasLabel @map("bias_label")
  createdAt         DateTime  @default(now()) @map("created_at")

  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@map("run_snapshots")
}

model PortfolioScenario {
  id        String            @id @default(cuid())
  name      String
  createdAt DateTime          @default(now()) @map("created_at")
  updatedAt DateTime          @updatedAt @map("updated_at")
  userId    String?           @map("user_id")

  holdings  ScenarioHolding[]
  user      User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
  themes    Theme[]

  @@index([userId])
  @@map("portfolio_scenarios")
}

model ScenarioHolding {
  id           String           @id @default(cuid())
  scenarioId   String           @map("scenario_id")
  name         String
  ticker       String?
  weight       Float?
  sensitivity  SensitivityLevel
  constraint   HoldingConstraint @default(FREE)
  purpose      HoldingPurpose    @default(LONG_TERM_GROWTH)
  exposureTags Json             @map("exposure_tags")
  orderIndex   Int              @map("order_index")

  scenario PortfolioScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  @@map("scenario_holdings")
}

model ThemeBranch {
  id          String      @id @default(cuid())
  themeId     String      @map("theme_id")
  name        BranchName
  probability Float
  rationale   String
  createdAt   DateTime    @default(now()) @map("created_at")

  theme      Theme           @relation(fields: [themeId], references: [id], onDelete: Cascade)
  nodeShocks ThemeNodeShock[]

  @@map("theme_branches")
}

model ThemeNodeShock {
  id          String        @id @default(cuid())
  branchId    String        @map("branch_id")
  nodeKey     String        @map("node_key")
  nodeLabel   String        @map("node_label")
  direction   ShockDirection
  magnitudePct Float        @map("magnitude_pct")
  strength    StrengthBand
  lag         LagBand
  confidence  ConfidenceLevel
  evidenceNote String       @map("evidence_note")

  branch ThemeBranch @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@map("theme_node_shocks")
}

model ExpressionRecommendation {
  id                 String          @id @default(cuid())
  themeId            String          @map("theme_id")
  symbol             String
  name               String
  assetType          UniverseAssetType @map("asset_type")
  direction          ImpactDirection
  action             String
  sizingBand         SizingBand      @map("sizing_band")
  maxPositionPct     Float           @map("max_position_pct")
  score              Float
  mechanism          String
  catalystWindow     String          @map("catalyst_window")
  pricedInNote       String          @map("priced_in_note")
  riskNote           String          @map("risk_note")
  invalidationTrigger String         @map("invalidation_trigger")
  portfolioRole      String          @map("portfolio_role")
  actionable         Boolean         @default(true)
  alreadyExpressed   Boolean         @default(false) @map("already_expressed")

  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@map("expression_recommendations")
}

model CompanyUniverseVersion {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  companies CompanyExposure[]

  @@index([userId])
  @@map("company_universe_versions")
}

model CompanyExposure {
  id                    String            @id @default(cuid())
  versionId             String            @map("version_id")
  symbol                String
  companyName           String            @map("company_name")
  assetType             UniverseAssetType @map("asset_type")
  region                String?
  currency              String?
  liquidityClass        String            @map("liquidity_class")
  maxPositionDefaultPct Float             @default(0.05) @map("max_position_default_pct")
  tags                  Json
  exposureVector        Json              @map("exposure_vector")

  version CompanyUniverseVersion @relation(fields: [versionId], references: [id], onDelete: Cascade)

  @@index([versionId])
  @@map("company_exposures")
}

model IndicatorDefinition {
  id                String                     @id @default(cuid())
  themeId           String                     @map("theme_id")
  indicatorName     String                     @map("indicator_name")
  sourceType        TrackingMode               @default(MANUAL) @map("source_type")
  supportsDirection IndicatorSupportDirection  @map("supports_direction")
  greenThreshold    Float                      @map("green_threshold")
  yellowThreshold   Float                      @map("yellow_threshold")
  redThreshold      Float                      @map("red_threshold")
  expectedWindow    String                     @map("expected_window")

  theme Theme @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@map("indicator_definitions")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refreshToken      String? @map("refresh_token")
  accessToken       String? @map("access_token")
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?
  idToken           String? @map("id_token")
  sessionState      String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}
